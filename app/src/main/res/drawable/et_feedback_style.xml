<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- border color 边框的颜色-->
    <item>
        <shape>
            <solid android:color="@color/home_gray_bg"/>
        </shape>
    </item>
    <!-- content background 内容背景色 其中android:left="3dp" 意为左边框 -->
    <item
        android:top="1dp">
        <shape>
            <solid android:color="@color/white"/>
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp"/>
        </shape>
    </item>

</layer-list>